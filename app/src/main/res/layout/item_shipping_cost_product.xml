<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="?attr/selectableItemBackground">

        <!-- Product Hierarchy -->
        <TextView
            android:id="@+id/tvProductHierarchy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product: Carga inalÃ¡mbrica"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:drawablePadding="8dp"
            app:drawableStartCompat="@drawable/ic_product" />

        <!-- Brand Name -->
        <TextView
            android:id="@+id/tvBrandName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Brand: Amazon"
            android:textSize="16sp"
            android:textColor="@color/gray_500"
            android:drawablePadding="8dp"
            android:layout_marginTop="4dp"
            app:drawableStartCompat="@drawable/ic_brand" />

        <!-- Shipping Cost -->
        <TextView
            android:id="@+id/tvShippingCost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shipping Cost: $25.52"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"
            android:textStyle="italic" />

        <!-- Divider Line -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_500"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
