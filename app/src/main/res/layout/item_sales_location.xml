<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="?attr/selectableItemBackground">

        <!-- Shipping City -->
        <TextView
            android:id="@+id/tvShippingCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="City: Masaya"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:drawablePadding="8dp" />

        <!-- Shipping Country -->
        <TextView
            android:id="@+id/tvShippingCountry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Country: Nicaragua"
            android:textSize="16sp"
            android:textColor="@color/gray_500"
            android:drawableLeft="@drawable/ic_nicaraguan"
            android:drawablePadding="8dp"
            android:layout_marginTop="4dp" />

        <!-- Sales Amount with Bold and Larger Text -->
        <TextView
            android:id="@+id/tvSalesAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sales: $20,684"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal" />

        <!-- Divider Line -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_500"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
