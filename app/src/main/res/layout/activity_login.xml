<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/imageBtnBack"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/cirlcleimagebtn"
            android:contentDescription="@string/loginImgbutton"
            android:padding="15dp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/ic_path" />

        <TextView
            android:id="@+id/txtLogin"
            android:layout_width="245dp"
            android:layout_height="35sp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:text="@string/txtlogin"
            android:textSize="32sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtEmail"
            android:layout_width="139dp"
            android:layout_height="16dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="35sp"
            android:text="@string/txtEmail"
            android:textColor="@color/gray_500"
            android:textSize="14sp" />


        <EditText
            android:id="@+id/editTxtEmail"
            android:layout_width="335dp"
            android:layout_height="48dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:autofillHints=""
            android:backgroundTint="@color/gray_600"
            android:drawableStart="@drawable/ic_email"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="@string/hint_test_gmail_com"
            android:inputType="textEmailAddress"
            android:paddingTop="12dp"
            android:paddingBottom="15dp" />

        <TextView
            android:id="@+id/txtPassword"
            android:layout_width="142dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="35sp"
            android:text="@string/txtcontrase_a"
            android:textColor="@color/gray_500"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/editTxtPassword"
            android:layout_width="335dp"

            android:layout_height="48dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:autofillHints=""
            android:backgroundTint="@color/gray_500"
            android:drawableStart="@drawable/ic_lock"
            android:drawableEnd="@drawable/ic_eye"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="@string/hintpassword"
            android:inputType="textPassword"
            android:paddingTop="1dp"
            android:paddingBottom="10dp"
            android:textSize="45sp" />


        <Button
            android:id="@+id/btnLogin"
            android:layout_width="332dp"
            android:layout_height="56dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/ic_rounded_button"
            android:backgroundTint="@color/blue_500"
            android:text="@string/btnLogin"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txSignUp"
            android:layout_width="374dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Soy un usuario nuevo. Registrarse"
            android:textAlignment="center"
            android:textColor="@color/blue_500" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>