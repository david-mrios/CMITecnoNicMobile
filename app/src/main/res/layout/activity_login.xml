<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login">

    <LinearLayout

        android:layout_width="409dp"
        android:layout_height="729dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageButton
            android:id="@+id/imageBtnBack"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/cirlcleimagebtn"
            android:contentDescription="@string/loginImgbutton"
            app:srcCompat="@drawable/ic_path"
            android:scaleType="centerInside"
            android:layout_marginTop="30dp"
            android:layout_marginStart="30dp"
            android:padding="15dp"
            />

        <TextView
            android:id="@+id/txtLogin"
            android:layout_width="245dp"
            android:layout_height="35sp"
            android:text="@string/txtlogin"
            android:layout_marginTop="30dp"
            android:layout_marginStart="54dp"
            android:textSize="32sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txtEmail"
            android:layout_width="139dp"
            android:layout_height="16dp"
            android:text="@string/txtEmail"
            android:layout_marginTop="35sp"
            android:layout_marginStart="54dp"
            android:textSize="14sp"
            android:textColor="@color/gray_500"/>

        <EditText
            android:id="@+id/editTxtEmail"
            android:layout_width="335dp"
            android:layout_height="32dp"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:layout_marginTop="10sp"
            android:layout_marginStart="54dp"
            android:background="@drawable/edit_textline_email"
            android:hint="@string/hint_test_gmail_com"
            android:drawableStart="@drawable/ic_email"
            android:drawablePadding="10dp"
            android:paddingTop="12dp"
            android:textColorHint="@color/black"
            />

        <TextView
            android:id="@+id/txtPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txtcontrase_a"
            android:layout_marginTop="35sp"
            android:layout_marginStart="54dp"
            android:textSize="14sp"
            android:textColor="@color/gray_500"/>

        <EditText
            android:id="@+id/editTxtPassword"
            android:layout_width="335dp"
            android:layout_height="32dp"
            android:ems="10"
            android:layout_marginTop="10dp"
            android:layout_marginStart="54dp"
            android:inputType="textPassword"
            android:background="@drawable/edit_textline_email"
            android:hint="@string/hintpassword"
            android:textColorHint="@color/black"
            android:drawableStart="@drawable/ic_lock"
            android:drawablePadding="10dp"
            android:paddingTop="1dp"
            android:drawableEnd="@drawable/ic_eye"
            android:textSize="45dp"/>

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="335dp"
            android:layout_height="56dp"
            android:text="@string/btnLogin"
            android:layout_marginTop="50dp"
            android:layout_marginStart="45dp"
            />

        <TextView
            android:id="@+id/txSignUp"
            android:layout_width="230dp"
            android:layout_height="18dp"
            android:text="@string/txtsignup"
            android:textColor="@color/blue_500"
            android:layout_marginStart="175dp"
            android:layout_marginTop="15dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>