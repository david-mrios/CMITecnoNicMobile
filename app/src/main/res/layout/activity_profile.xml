<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/backImgBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circular_button_background"
            android:padding="10dp"
            app:srcCompat="@drawable/ic_back"
            tools:layout_editor_absoluteX="23dp"
            tools:layout_editor_absoluteY="54dp" />

        <ImageButton
            android:id="@+id/addImgBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circular_button_background"
            android:padding="10dp"
            app:srcCompat="@drawable/ic_user_edit_pen"
            tools:layout_editor_absoluteX="325dp"
            tools:layout_editor_absoluteY="54dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="54dp"
            android:layout_height="34dp"
            android:text="@string/perfil"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            app:layout_constraintTop_margin="16dp"
            tools:layout_editor_absoluteX="183dp"
            tools:layout_editor_absoluteY="68dp" />

        <ImageView
            android:id="@+id/profileImgView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_profile"
            tools:layout_editor_absoluteX="23dp"
            tools:layout_editor_absoluteY="150dp" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/testing_user"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            app:layout_constraintTop_margin="16dp"
            tools:layout_editor_absoluteX="123dp"
            tools:layout_editor_absoluteY="150dp" />

        <EditText
            android:id="@+id/personalInformationTxt"
            android:layout_width="407dp"
            android:layout_height="55dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/ic_profile_text"
            android:drawableRight="@drawable/ic_following"
            android:drawablePadding="12dp"
            android:ems="10"
            android:inputType="text"
            android:padding="12dp"
            android:text="@string/informaci_n_personal"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="243dp" />

        <EditText
            android:id="@+id/configurationTxt"
            android:layout_width="407dp"
            android:layout_height="55dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/ic_configuration"
            android:drawableRight="@drawable/ic_following"
            android:drawablePadding="12dp"
            android:ems="10"
            android:inputType="text"
            android:padding="12dp"
            android:text="@string/ajustes"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="298dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>