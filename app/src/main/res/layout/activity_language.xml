<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".language">

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_back"
        android:background="@color/white_100"
        android:contentDescription="Back"
        android:layout_marginStart="16dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        android:padding="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView7"
        android:layout_width="92dp"
        android:layout_height="25dp"
        android:layout_marginStart="117dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="666dp"
        android:text="Lenguaje"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <SearchView
        android:id="@+id/searchView"
        android:layout_width="335dp"
        android:layout_height="44dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@color/gray_400"
        android:backgroundTint="@color/white_100"
        android:queryHint="Buscar idioma..."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.368"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView7" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="left" />

    <LinearLayout
        android:layout_width="423dp"
        android:layout_height="315dp"
        android:orientation="vertical"
        android:background="@drawable/ic_launcher_foreground"
        android:paddingVertical="8dp"
        android:padding="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="170dp"
        app:layout_constraintTop_toBottomOf="@+id/searchView">

    <LinearLayout
        android:layout_width="660dp"
        android:layout_height="58dp"
        android:orientation="horizontal"
        android:background="@drawable/ic_launcher_foreground"
        android:paddingVertical="8dp">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="130dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@color/white_100"
            android:drawableLeft="@drawable/ic_united_states"
            android:drawablePadding="8dp"
            android:gravity="center_vertical|start"
            android:text="Inglés"
            android:textSize="16sp"
            android:textStyle="normal"/>

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="30dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@color/white_100"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="660dp"
        android:layout_height="58dp"
        android:orientation="horizontal"
        android:background="@drawable/ic_launcher_foreground"
        android:paddingVertical="8dp">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="130dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@color/white_100"
            android:drawableLeft="@drawable/ic_france"
            android:drawablePadding="8dp"
            android:gravity="center_vertical|start"
            android:text="Frances"
            android:textSize="16sp"
            android:textStyle="normal"/>

        <RadioButton
            android:id="@+id/radioButton1"
            android:layout_width="30dp"
            android:layout_height="48dp"
            android:background="@color/white_100"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="660dp"
        android:layout_height="58dp"
        android:orientation="horizontal"
        android:background="@drawable/ic_launcher_foreground"
        android:paddingVertical="8dp">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="130dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@color/white_100"
            android:drawableLeft="@drawable/ic_spain"
            android:drawablePadding="8dp"
            android:gravity="center_vertical|start"
            android:text="Español"
            android:textSize="16sp"
            android:textStyle="normal"/>

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="30dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@color/white_100" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="660dp"
        android:layout_height="58dp"
        android:orientation="horizontal"
        android:background="@drawable/ic_launcher_foreground"
        android:paddingVertical="8dp">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="130dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@color/white_100"
            android:drawableLeft="@drawable/ic_vietnam"
            android:drawablePadding="8dp"
            android:gravity="center_vertical|start"
            android:text="Vietnamita"
            android:textSize="16sp"
            android:textStyle="normal"/>

        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="30dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@color/white_100" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="660dp"
        android:layout_height="58dp"
        android:orientation="horizontal"
        android:background="@drawable/ic_launcher_foreground"
        android:paddingVertical="8dp">

        <TextView
            android:id="@+id/textView13"
            android:layout_width="130dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@color/white_100"
            android:drawableLeft="@drawable/ic_brazil"
            android:drawablePadding="8dp"
            android:gravity="center_vertical|start"
            android:text="Portugués"
            android:textSize="16sp"
            android:textStyle="normal"/>

        <RadioButton
            android:id="@+id/radioButton4"
            android:layout_width="30dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@color/white_100" />
    </LinearLayout>

</LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
