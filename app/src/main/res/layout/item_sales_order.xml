<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="?attr/selectableItemBackground">

    <!-- Sales Status with Icon -->
    <TextView
        android:id="@+id/tvSalesStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status: Cancelado"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:drawablePadding="8dp"
        app:drawableStartCompat="@drawable/ic_cancelled" />

    <!-- Sales Amount -->
    <TextView
        android:id="@+id/tvSalesAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sales Amount: $49,688"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginTop="4dp" />

    <!-- Quantity -->
    <TextView
        android:id="@+id/tvQuantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quantity: 5,753"
        android:textSize="16sp"
        android:textColor="@color/gray_500"
        android:layout_marginTop="4dp" />

    <!-- Divider Line -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_500"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />

</LinearLayout>
